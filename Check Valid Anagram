
int isAnagram(char* s, char* t)
{
    // check if both the lengths of string are equal otherwise false
    
    if (strlen(s)!=strlen(t))
    return false;
    
    // creating an integer array 
    int arr[26] = {0};
    //first index is initialised to 0 .. since remaining 25 not initialised by default 0
    int len = strlen(s);
    
    for (int i =0;i<len;i++)
    {
        // increment the value 
        arr[s[i] - 'a']++; 
        
        arr[t[i] - 'a']--;
        
    }
  
  for (int i =0; i<26;i++)
{
    if (arr[i]!=0)
    {
        return 0;
    }
}
return 1;    
}


